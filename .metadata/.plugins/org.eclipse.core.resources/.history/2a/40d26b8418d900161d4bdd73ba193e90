class Colaborador extends BaseColaborador
{
   	public function addGen($idColaborador2 , $idusuarioUsuario
   	,$idPerfil , $informacionPerfil
   	 , $gustosPerfil
   	 , $nacimientoPerfil
   	
   	 , $passwordUsuario
   	 , $nombreUsuario
   	 , $apellidosUsuario
   	 , $avatarUsuario
   	 , $emailUsuario
   	 , $mensajeColaborador
   	 , $pruebaColaborador
   	){
       $con = Propel::getWriteConnection(ColaboradorTableMap::DATABASE_NAME);

	   $con->beginTransaction();
		try {
		   $colaborador = new Colaborador();
	       $colaborador->setIdColaborador2($idColaborador2);
	       $colaborador->setEmail($emailUsuario);
	       $colaborador->setMensaje($mensajeColaborador);
	       $perfil = new Perfil();
	       if(!$perfil->exists($idPerfil)){
	       $row = $perfil->get($idPerfil);
	       $colaborador->setFkPerfil($row->getPrimaryKey());
	       }
	       else{
	       $perfil->add($idPerfil , $informacionPerfil
	        , $gustosPerfil
	        , $nacimientoPerfil
	       );
	       
	       $colaborador->setFkPerfil($perfil->getPrimaryKey());
	       }
	       $colaborador->setPrueba($pruebaColaborador);
	       $colaborador->setAvatar($avatarUsuario);
	       $colaborador->setApellidos($apellidosUsuario);
	       $colaborador->setPassword($passwordUsuario);
	       $colaborador->setNombre($nombreUsuario);
	       
	       $this->addColaborador($colaborador);
	       print_r('dfgfg '.$colaborador);
	       
	       
           $this->save($con);
	       
	      $con->commit();
          return $this;
	      } catch (Exception $e) {
	        
			$con->rollback(); //en caso de que se produzca alguna excepcion la transacci�n ser� cancelada
			throw $e;
            return false;
		  }
     }

     public function get($idColaborador2){
       $colaborador = ColaboradorQuery::create()->filterByidColaborador2($idColaborador2)->findOne();
       //echo $colaborador->toJSON();
       return $colaborador;
     }
    public function exists($idColaborador2){
       return ColaboradorQuery::create()->filterByidColaborador2($idColaborador2)->find()->isEmpty();
     }
    public function deleteCascade(){
       try {
       $colaborador = ColaboradorQuery::create()->filterByidColaborador2($this->getPrimaryKey())->findOne();
       if(!is_null($colaborador)){
	       
	       $perfil = new Perfil();
	       $perfil = $perfil->get($usuario->getFkPerfil());
	       
	
	       $colaborador->delete();
	       if(!is_null($perfil)){
